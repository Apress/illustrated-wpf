<Window x:Class="MenuStructure1.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Menus" Height="130" Width="215">
    <StackPanel>
      <Menu>
         <MenuItem Header="File">
            <MenuItem Header="New Game" Click="MenuItemNewGame_Click"
                      InputGestureText="Alt-N">
            <MenuItem.Icon>
               <Image Source="Card.bmp"/>
            </MenuItem.Icon>
         </MenuItem>
         <MenuItem Header="Shuffle Sound" Click="MenuItemExit_Click"
             IsChecked="True"  InputGestureText="Alt-S"/>
         </MenuItem>
      </Menu>
    </StackPanel>
</Window>
