<Window x:Class="ProgressBar.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Progress Bar" Height="120" Width="200">
    <StackPanel>
      <TextBlock Margin="5" FontWeight="Bold">Current Percent Done</TextBlock>
      <ProgressBar Name="pBar" Value="60" Margin="5" Height="20" />
      <TextBlock Text="{Binding ElementName=pBar, Path=Value}" Margin="5"/>
   </StackPanel>
</Window>
