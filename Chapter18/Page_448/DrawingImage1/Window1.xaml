<Window x:Class="DrawingImage1.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DrawingImageGeometry" Height="145" Width="159">
    <Grid>
      <Image Width="100" Height="60">
         <Image.Source>
            <DrawingImage>
               <DrawingImage.Drawing>
                  <GeometryDrawing Brush="Aqua">
                     <GeometryDrawing.Pen>
                        <Pen Thickness="1" Brush="Black"/>
                     </GeometryDrawing.Pen>
                     <GeometryDrawing.Geometry>
                        <CombinedGeometry GeometryCombineMode="Xor">
                           <CombinedGeometry.Geometry1>
                              <EllipseGeometry Center="60,50" RadiusX="40" RadiusY="30"/>
                           </CombinedGeometry.Geometry1>
                           <CombinedGeometry.Geometry2>
                              <EllipseGeometry Center="100,50" RadiusX="40" RadiusY="30"/>
                           </CombinedGeometry.Geometry2>
                        </CombinedGeometry>
                     </GeometryDrawing.Geometry>
                  </GeometryDrawing>
               </DrawingImage.Drawing>
            </DrawingImage>
         </Image.Source>
      </Image>

   </Grid>
</Window>
